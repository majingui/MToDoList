<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:main1"
    ohos:padding="16vp">

    <DirectionalLayout
        ohos:id="$+id:searchlist"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:horizontal_center="true">

        <TextField
            ohos:id="$+id:searchfield"
            ohos:height="match_parent"
            ohos:width="200fp"
            ohos:below="$id:title"
            ohos:hint="输入要搜索的Title"
            ohos:text_size="50px"
            ohos:text_color="white"
            />
        <Button
            ohos:id="$+id:searchbutton"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="20vp"
            ohos:left_margin="18vp"
            ohos:bottom_margin="18vp"
            ohos:right_padding="10vp"
            ohos:left_padding="10vp"
            ohos:text_size="80px"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:background_button"
            ohos:text="搜索"/>
        <Button
            ohos:id="$+id:new_record"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_button"
            ohos:text="新建"
            ohos:layout_alignment="right"
            ohos:text_alignment="center"
            ohos:clickable="true"
            ohos:left_margin="18vp"
            ohos:bottom_margin="18vp"
            ohos:right_padding="10vp"
            ohos:left_padding="10vp"
            ohos:text_size="80px"
            ohos:horizontal_center="true"/>
    </DirectionalLayout>


    <ListContainer
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:id="$+id:list_container"
        ohos:below="$id:searchlist"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:end_margin="2vp"
        ohos:layout_alignment="horizontal_center"
        ohos:start_margin="2vp"/>
    <DirectionalLayout
        ohos:align_parent_bottom="true"
        ohos:id="$+id:sort"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"

        ohos:horizontal_center="true">

        <Button
            ohos:id="$+id:sortAll"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="20vp"
            ohos:left_margin="18vp"
            ohos:bottom_margin="18vp"
            ohos:right_padding="10vp"
            ohos:left_padding="10vp"
            ohos:text_size="60px"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:background_button"
            ohos:text="全部"/>
        <Button
            ohos:id="$+id:sortstudy"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="20vp"
            ohos:left_margin="18vp"
            ohos:bottom_margin="18vp"
            ohos:right_padding="10vp"
            ohos:left_padding="10vp"
            ohos:text_size="60px"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:background_button"
            ohos:text="学习"/>
        <Button
            ohos:id="$+id:sortLife"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="20vp"
            ohos:left_margin="18vp"
            ohos:bottom_margin="18vp"
            ohos:right_padding="10vp"
            ohos:left_padding="10vp"
            ohos:text_size="60px"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:background_button"
            ohos:text="生活"/>
        <Button
            ohos:id="$+id:sortWork"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="20vp"
            ohos:left_margin="18vp"
            ohos:bottom_margin="18vp"
            ohos:right_padding="10vp"
            ohos:left_padding="10vp"
            ohos:text_size="60px"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:background_button"
            ohos:text="工作"/>
    </DirectionalLayout>


</DependentLayout>